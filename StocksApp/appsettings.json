{
  "Logging": { // This section is used by the .NET Core logging framework, since we are using Serilog, this section is obsolete
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "TradingOptions": {
    "DefaultOrderQuantity": 100,
    "Top25PopularStocks": [ "AAPL", "MSFT", "AMZN", "TSLA", "GOOGL", "GOOG", "NVDA", "BRK.B", "META", "UNH", "JNJ", "JPM", "V", "PG", "XOM", "HD", "CVX", "MA", "BAC", "ABBV", "PFE", "AVGO", "COST", "DIS", "KO" ]
  },
  "ConnectionStrings": {
    "StockMarketConnection": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=StockMarket;Integrated Security=True;Connect Timeout=30;Encrypt=False;Trust Server Certificate=False;Application Intent=ReadWrite;Multi Subnet Failover=False"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.MSSqlServer",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\log.txt",
          "rollingInterval": "Hour",
          "fileSizeLimitBytes": 1048576, //1 MB
          "rollOnFileSizeLimit": true
        }
      },
      //// Uncomment this section to enable logging to SQL Server
      //{ 
      //  "Name": "MSSqlServer",
      //  "Args": {
      //    "connectionString": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=StockMarket_Logs;Integrated Security=True;Connect Timeout=30;Encrypt=False;Trust Server Certificate=False;Application Intent=ReadWrite;Multi Subnet Failover=False",
      //    "autoCreateSqlTable": true,
      //    "tableName": "Logs"
      //  }
      //},
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
      "ApplicationName": "Stocks Application"
    }
  }
}
